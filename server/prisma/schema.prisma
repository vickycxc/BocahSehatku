generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model OrangTua {
  id             Int             @id @default(autoincrement())
  noHp           String          @unique
  nama           String?
  nik            String?         @unique
  jenisKelamin   jenisKelamin?
  alamat         String?
  posyandu       Posyandu?       @relation(fields: [posyanduId], references: [id])
  posyanduId     Int?
  anak           Anak[]
  verifikasiAkun VerifikasiAkun?
  kodeOtp        String?
  otpExpiresAt   DateTime?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
}

model Posyandu {
  id             Int              @id @default(autoincrement())
  kodePosyandu   String           @unique
  password       String
  namaPosyandu   String
  kecamatan      String
  puskesmas      String
  desaKelurahan  String
  alamat         String
  orangTua       OrangTua[]
  verifikasiAkun VerifikasiAkun[]
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
}

model Anak {
  id           Int          @id @default(autoincrement())
  nama         String
  tanggalLahir DateTime
  jenisKelamin jenisKelamin
  nik          String?      @unique
  bbLahir      Float?
  tbLahir      Float?
  mingguLahir  Int?
  orangTua     OrangTua?    @relation(fields: [orangTuaId], references: [id])
  orangTuaId   Int?
  pengukuran   Pengukuran[]
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
}

model Pengukuran {
  id                Int          @id @default(autoincrement())
  tanggalPengukuran DateTime
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt
  beratBadan        Float
  tinggiBadan       Float
  anak              Anak         @relation(fields: [anakId], references: [id])
  anakId            Int
  imt               Float
  kategoriBBU       kategoriBBU
  kategoriTBU       kategoriTBU
  kategoriBBTB      kategoriBBTB
  kategoriIMTU      kategorIMTU
}

model VerifikasiAkun {
  id         Int      @id @default(autoincrement())
  nik        String   @unique
  orangTua   OrangTua @relation(fields: [nik], references: [nik])
  posyandu   Posyandu @relation(fields: [posyanduId], references: [id])
  posyanduId Int
  noHpBaru   String   @unique
  createdAt  DateTime @default(now())
}

model VerifikasiOtp {
  id           Int      @id @default(autoincrement())
  noHp         String   @unique
  kodeOtp      String
  otpExpiresAt DateTime
  createdAt    DateTime @default(now())
}

model RiwayatOtp {
  id        Int      @id @default(autoincrement())
  noHp      String
  createdAt DateTime @default(now())
}

enum jenisKelamin {
  LAKI_LAKI
  PEREMPUAN
}

enum kategoriBBU {
  SANGAT_KURANG
  KURANG
  NORMAL
  LEBIH
}

enum kategoriTBU {
  SANGAT_PENDEK
  PENDEK
  NORMAL
  TINGGI
}

enum kategoriBBTB {
  GIZI_BURUK
  GIZI_KURANG
  GIZI_BAIK
  BERISIKO_GIZI_LEBIH
  GIZI_LEBIH
  OBESITAS
}

enum kategorIMTU {
  GIZI_BURUK
  GIZI_KURANG
  GIZI_BAIK
  BERISIKO_GIZI_LEBIH
  GIZI_LEBIH
  OBESITAS
}
